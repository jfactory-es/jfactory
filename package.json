{
  "name": "jfactory",
  "version": "1.8.0-alpha",
  "description": "Easily modularize your application into cancelable components. Everything they initialize can be monitored, stopped and removed automatically, including views, nested promise trees, requests, listeners, DOM and CSS.",
  "author": "Stephane Plazis",
  "license": "SEE LICENSE IN LICENSE.txt",
  "x-licenseUrl": "https://raw.githubusercontent.com/jfactory-es/jfactory/master/LICENSE.txt",
  "x-copyrightYear": "2019-2023",
  "homepage": "https://github.com/jfactory-es/jfactory",
  "repository": {
    "type": "git",
    "url": "https://github.com/jfactory-es/jfactory.git"
  },
  "bugs": "https://github.com/jfactory-es/jfactory/issues",
  "keywords": [
    "vue",
    "vuejs",
    "react",
    "view",
    "component",
    "component-based",
    "web-component",
    "webcomponent",
    "webapp",
    "web-app",
    "single-page-application",
    "spa",
    "cleanup",
    "clear",
    "uninstall",
    "disable",
    "destroy",
    "cancel",
    "cancelable",
    "cancellable",
    "abortable",
    "asynchronous",
    "promise",
    "task",
    "library",
    "framework"
  ],
  "main": "es/index.js",
  "exports": {
    ".": "./es/index.js",
    "./es": "./es/index.mjs",
    "./devel": "./es/devel/index.mjs"
  },
  "files": [
    "es/**",
    "umd/**",
    "src/**"
  ],
  "devEngines": {
    "node": ">=18.x"
  },
  "scripts": {
    "build": "node scripts/build.js",
    "test:source": "MODE=SOURCE npx vitest run",
    "test:es:prod": "MODE=ES_PROD npx vitest run",
    "test:es:dev": "MODE=ES_DEVEL npx vitest run",
    "test:umd:prod": "MODE=UMD_PROD npx vitest run",
    "test:umd:dev": "MODE=UMD_DEVEL npx vitest run",
    "watch:source": "MODE=SOURCE npx vitest",
    "watch:source:ui": "MODE=SOURCE npx vitest --ui"
  },
  "peerDependencies": {
    "jquery": "^3",
    "lodash": "^4"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^5.0.2",
    "@rollup/plugin-terser": "^0.4.1",
    "@vitest/ui": "^0.30.0",
    "ansi-colors": "^4.1.3",
    "jsdom": "^21.1.1",
    "msw": "^1.2.1",
    "node-fetch": "^4.0.0-beta.4",
    "rollup": "^3.20.2",
    "semver": "^7.4.0",
    "sinon": "^15.0.3",
    "vitest": "^0.30.0"
  },
  "/experimental/": {
  }
}